{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "inlineSourceMap": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.mock.ts"],
  "include": ["src/**/*.ts"]
}